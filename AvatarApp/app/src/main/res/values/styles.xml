<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>
    </style>

    <!--
    https://material.io/develop/android/theming/shape/
    https://material.io/develop/android/components/material-card-view/
    -->
    <style name="ShapeAppearanceOverlay.MaterialCardView" parent="">
        <!--<item name="cornerFamily">cut</item>-->
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

    <style name="Widget.MyApp.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView</item>
    </style>



</resources>
